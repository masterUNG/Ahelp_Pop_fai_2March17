<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.pop.pareeya.ahelp.SettingActivity"
    android:background="@drawable/bgset">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linButton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#e0e0fffe"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                android:id="@+id/linOld"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/textset"
                    android:id="@+id/imageView5"
                    android:layout_height="97dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                       android:src="@drawable/butcall"
                        android:id="@+id/imageView4"
                        android:layout_gravity="right"
                        android:layout_height="40dp"
                        android:layout_weight="0"
                        android:layout_width="41dp"
                        android:layout_marginRight="5dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:background="#e0e0fffe"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:paddingLeft="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView5"
                        android:textSize="@dimen/h2"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView6"
                        android:textSize="@dimen/h2"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView9"
                        android:textSize="@dimen/h2"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView10"
                        android:textSize="@dimen/h2"
                        android:textColor="@android:color/black"
                        android:layout_height="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/textView11"
                        android:textSize="@dimen/h2"
                        android:textColor="@android:color/black"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butadd"
                        android:id="@+id/imageView6"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butadd"
                        android:id="@+id/imageView7"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butadd"
                        android:id="@+id/imageView8"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butadd"
                        android:id="@+id/imageView9"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butadd"
                        android:id="@+id/imageView10"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butdel"
                        android:id="@+id/imageView11"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butdel"
                        android:id="@+id/imageView12"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butdel"
                        android:id="@+id/imageView13"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butdel"
                        android:id="@+id/imageView14"
                        android:layout_weight="1"
                        android:layout_height="30dp" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/butdel"
                        android:id="@+id/imageView15"
                        android:layout_weight="1"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ragPhone">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/mradioButton6"
                            android:layout_weight="1"
                            android:layout_height="30dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/mradioButton7"
                            android:layout_weight="1"
                            android:layout_height="30dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/mradioButton8"
                            android:layout_weight="1"
                            android:layout_height="30dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/mradioButton9"
                            android:layout_weight="1"
                            android:layout_height="30dp" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:id="@+id/mradioButton10"
                            android:layout_weight="1"
                            android:layout_height="30dp" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:layout_width="match_parent"
                android:id="@+id/livFriend"
                android:layout_margin="20dp"
                android:background="#e0e0fffe"
                android:layout_weight="10428.78"
                android:layout_height="100dp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linButton"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ok_set"
            android:id="@+id/button14"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#037f1f"
            android:textStyle="bold"
            android:onClick="clickSetting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ยกเลิก"
            android:id="@+id/button19"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:background="#d8000e"
            android:textStyle="bold"
            android:onClick="clickCancelSetting"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp" />

    </LinearLayout>

</RelativeLayout>
