<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pop.pareeya.ahelp.HomeActivity"
    android:background="@drawable/bghome">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"

        android:layout_below="@+id/button15"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="98dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <ImageView
            android:layout_width="169dp"
            android:layout_height="46dp"
            android:src="@drawable/textalarm"
            android:id="@+id/imageView2"
            android:layout_gravity="center" />

        <ImageView
            android:layout_width="290dp"
            android:layout_height="260dp"
            android:id="@+id/imageView3" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/call"
                android:background="@drawable/but1669"
                android:layout_weight="1.32"
                android:layout_width="120dp"
                android:layout_height="110dp" />

            <Button
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:id="@+id/button13"
                android:layout_weight="1.32"
                android:background="@drawable/butcall"
                android:layout_marginLeft="30dp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button15"
        android:layout_gravity="right"
        android:background="@drawable/bset"
        android:onClick="clickHomeGoSetting"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnShowListHistory"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowListHistory"
        android:background="@drawable/baddhistory"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
